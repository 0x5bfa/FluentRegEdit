<Page
    x:Class="RegistryValley.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:RegistryValley.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RegistryValley.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:RegistryValley.App.Models"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:tree="using:RegistryValley.App.UserControls.TreeViewControl"
    DataContext="{x:Bind ViewModel, Mode=OneWay}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourceDictionaries/DefaultGridSplitterStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />

            <Style
                x:Name="HeaderGridSplitterStyle"
                BasedOn="{StaticResource DefaultGridSplitterStyle}"
                TargetType="toolkit:GridSplitter">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Width" Value="12" />
                <Setter Property="Margin" Value="0,4,0,4" />
                <Setter Property="Opacity" Value="0.8" />
                <Setter Property="Canvas.ZIndex" Value="1" />
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>

            <ProgressBar
                x:Name="LoadingProgressBar"
                VerticalAlignment="Top"
                x:Load="{x:Bind ViewModel.Loading, Mode=OneWay}"
                IsIndeterminate="True" />

            <StackPanel
                Height="44"
                VerticalAlignment="Top"
                Background="Transparent"
                Orientation="Horizontal">

                <Image
                    x:Name="AppFontIcon"
                    Width="20"
                    Height="20"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="ms-appx:///Assets/AppTiles/StoreLogo.png" />

                <TextBlock
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Registry" />

                <TextBlock
                    Margin="2,0,0,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Valley" />

                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="BETA" />

            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="144" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="144" />
            </Grid.ColumnDefinitions>

            <Grid>
                <TreeView
                    MinWidth="256"
                    CanDrag="False"
                    CanDragItems="False"
                    CanReorderItems="False"
                    Expanding="OnDirTreeViewExpanding"
                    ItemInvoked="OnDirTreeViewItemInvoked"
                    ItemsSource="{x:Bind ViewModel.KeyItems, Mode=OneWay}"
                    SelectionMode="Single">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="CollapsedGlyph" Value="&#xE70D;" />
                            <Setter Property="ExpandedGlyph" Value="&#xE70E;" />
                            <Setter Property="Height" Value="38" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <DataTemplate x:DataType="models:KeyItem">
                            <TreeViewItem
                                HasUnrealizedChildren="True"
                                IsExpanded="False"
                                ItemsSource="{x:Bind Children}">

                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    ToolTipService.ToolTip="{x:Bind Path, Mode=OneWay}">

                                    <Grid>
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#fdde81"
                                            Glyph="&#xe8d5;" />
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#d59e0d"
                                            Glyph="&#xe8b7;" />
                                    </Grid>

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{ThemeResource BodyTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                </StackPanel>

                            </TreeViewItem>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>

            <toolkit:GridSplitter
                Grid.Column="1"
                Width="1"
                Style="{StaticResource InvisibleGridSplitterStyle}" />

            <Grid
                Grid.Column="2"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,1,0,0"
                CornerRadius="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="KeyPathGrid" Margin="24,24,24,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock
                            FontWeight="Normal"
                            Foreground="{ThemeResource TextFillColorSecondary}"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="HKEY_LOCAL_MACHINE" />
                        <FontIcon FontSize="12" Glyph="&#xe76c;" />
                        <TextBlock
                            FontWeight="Normal"
                            Foreground="{ThemeResource TextFillColorSecondary}"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="SYSTEM" />
                        <FontIcon FontSize="12" Glyph="&#xe76c;" />
                        <TextBlock
                            FontWeight="Normal"
                            Foreground="{ThemeResource TextFillColorSecondary}"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="CurrentControlSet" />
                        <FontIcon FontSize="12" Glyph="&#xe76c;" />
                        <TextBlock
                            FontWeight="Normal"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Control" />
                    </StackPanel>

                    <Button
                        Grid.Column="1"
                        Width="36"
                        Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0">
                        <FontIcon FontSize="16" Glyph="&#xe70f;" />
                    </Button>

                </Grid>

                <Grid Grid.Row="1" Margin="16,4,24,6">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <DropDownButton
                            Height="36"
                            Padding="8,0"
                            Background="Transparent"
                            BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    Glyph="&#xe710;" />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="New" />
                            </StackPanel>
                        </DropDownButton>
                        <Button
                            Height="36"
                            Padding="8,0"
                            Background="Transparent"
                            BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    Glyph="&#xe8b5;" />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Import" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="36"
                            Padding="8,0"
                            Background="Transparent"
                            BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    Glyph="&#xede1;" />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Import" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="36"
                            Padding="8,0"
                            Background="Transparent"
                            BorderThickness="0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    Glyph="&#xe8d7;" />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Import" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <ListView
                        x:Name="ValueListView"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        AllowDrop="False"
                        CanDragItems="False"
                        DoubleTapped="OnValueListViewDoubleTapped"
                        IsDoubleTapEnabled="True"
                        ItemsSource="{x:Bind ViewModel.ValueItems, Mode=OneWay}"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollMode="Auto"
                        SelectionMode="Single">

                        <ListView.ItemContainerTransitions>
                            <TransitionCollection>
                                <AddDeleteThemeTransition />
                            </TransitionCollection>
                        </ListView.ItemContainerTransitions>

                        <ListView.Header>
                            <Grid
                                x:Name="HeaderGrid"
                                Height="40"
                                Margin="0,0,0,4"
                                Padding="32,0,0,0"
                                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                                BorderThickness="0,0,0,1">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="ColumnName" Width="{x:Bind ViewModel.ColumnName, Mode=TwoWay}" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition x:Name="ColumnType" Width="{x:Bind ViewModel.ColumnType, Mode=TwoWay}" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition x:Name="ColumnData" Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondary}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="Name"
                                    TextTrimming="CharacterEllipsis" />

                                <toolkit:GridSplitter Grid.Column="1" Style="{StaticResource HeaderGridSplitterStyle}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondary}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="Type"
                                    TextTrimming="CharacterEllipsis" />

                                <toolkit:GridSplitter Grid.Column="3" Style="{StaticResource HeaderGridSplitterStyle}" />

                                <TextBlock
                                    Grid.Column="4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondary}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="Data"
                                    TextTrimming="CharacterEllipsis" />

                            </Grid>
                        </ListView.Header>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ValueItem">
                                <Grid
                                    HorizontalAlignment="Stretch"
                                    ColumnSpacing="14"
                                    IsRightTapEnabled="True">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="ColumnName" Width="{Binding ElementName=ValueListView, Path=DataContext.ColumnName, Mode=OneWay}" />
                                        <ColumnDefinition x:Name="ColumnType" Width="{Binding ElementName=ValueListView, Path=DataContext.ColumnType, Mode=OneWay}" />
                                        <ColumnDefinition x:Name="ColumnData" Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Grid>
                                            <toolkit:SwitchPresenter TargetType="x:Boolean" Value="{x:Bind ValueIsString, Mode=OneWay}">
                                                <toolkit:Case Value="True">
                                                    <Image
                                                        Width="18"
                                                        Height="18"
                                                        Source="/Assets/Images/StringValue.png" />
                                                </toolkit:Case>
                                                <toolkit:Case Value="False">
                                                    <Image
                                                        Width="18"
                                                        Height="18"
                                                        Source="/Assets/Images/BinaryValue.png" />
                                                </toolkit:Case>
                                            </toolkit:SwitchPresenter>
                                        </Grid>
                                        <TextBlock Text="{x:Bind FriendlyName, Mode=OneWay}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{x:Bind Type, Mode=OneWay}" />
                                    <TextBlock Grid.Column="2" Text="{x:Bind FriendlyValue, Mode=OneWay}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Margin" Value="12,0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Page>
